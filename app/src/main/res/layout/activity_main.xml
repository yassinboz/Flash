<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/resto2"
        android:scaleType="centerCrop" />

    <!-- CardView for Form Inputs -->
    <androidx.cardview.widget.CardView
        android:id="@+id/formCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#CCFFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:spacing="10dp">

            <!-- Menu Name Input Field -->
            <EditText
                android:id="@+id/plat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Menu Name"
                android:inputType="text" />

            <!-- Menu Description Input Field -->
            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:inputType="text" />

            <!-- Menu Price Input Field -->
            <EditText
                android:id="@+id/prix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Price"
                android:inputType="numberDecimal" />

            <!-- RatingBar Field -->


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Add Menu Button -->
    <Button
        android:id="@+id/Ajouter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Menu"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/formCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Display Menu Button -->
    <Button
        android:id="@+id/afficherButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Menu"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/Ajouter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
